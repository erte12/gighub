@model GigHub.ViewModels.GigsFormVM

@{
    ViewBag.Title = "Create a Gig";
}

<h2>Add a Gig</h2>
<form>
    <div class="form-group">
        @Html.LabelFor(vm => vm.Venue)
        @Html.TextBoxFor(vm => vm.Venue, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(vm => vm.Time)
        @Html.TextBoxFor(vm => vm.Time, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(vm => vm.Date)
        @Html.TextBoxFor(vm => vm.Date, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(vm => vm.Genre)
        @Html.DropDownListFor(vm => vm.Genres, new SelectList(Model.Genres, "Id", "Name"), new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
